{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/nx-schema.json",
  "parallel": "200%",
  "targetDefaults": {
    "dev:prepare": {
      "inputs": [
        "{projectRoot}/**/*.{ts,tsx}",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json"
      ],
      "outputs": ["{projectRoot}/lib/**/*.js", "{projectRoot}/bin/**/*.js"],
      "cache": true
    },
    "build:lib": {
      "dependsOn": ["^dev:prepare"],
      "inputs": [
        "{projectRoot}/src/**/*.{ts,tsx}",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json",
        "{workspaceRoot}/gulpfile.js"
      ],
      "outputs": ["{projectRoot}/lib/**/*.js", "{projectRoot}/bin/**/*.js"],
      "cache": true
    },
    "test": {
      "dependsOn": [
        {"projects": ["*"], "target": "build-native-release"},
        {"projects": ["*"], "target": "build:lib"}
      ]
    },
    "test:integration": {
      "dependsOn": [
        {"projects": ["*"], "target": "build-native-release"},
        {"projects": ["*"], "target": "build:lib"}
      ]
    },
    "build-native-release": {
      "inputs": [
        "{workspaceRoot}/scripts/build-native.js",
        "{workspaceRoot}/crates/**/*.rs",
        "{workspaceRoot}/crates/**/*.toml",
        "{workspaceRoot}/packages/**/*.rs",
        "{workspaceRoot}/packages/**/*.toml",
        "{workspaceRoot}/Cargo.lock",
        "{workspaceRoot}/Cargo.toml"
      ],
      "outputs": ["{workspaceRoot}/target/**/*"],
      "cache": true
    },
    "test:integration:ci": {
      "dependsOn": [
        {"projects": ["*"], "target": "build-native-release"},
        {"projects": ["*"], "target": "build:lib"}
      ]
    }
  }
}
