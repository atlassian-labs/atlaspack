{
  // Exclude test files for now
  "exclude": ["**/test/**"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "${configDir}/lib/types",
    "downlevelIteration": true,
    "erasableSyntaxOnly": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "outDir": "${configDir}/lib",
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "typeRoots": ["./types/"]
}
