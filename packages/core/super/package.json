{
  "name": "@atlaspack/super",
  "version": "2.14.0",
  "description": "Blazing fast, zero configuration web application bundler",
  "license": "(MIT OR Apache-2.0)",
  "scripts": {
    "build": "rm -rf lib && yarn generate-entries && yarn build:atlaspack && yarn create-empty-files",
    "generate-entries": "rm -rf entries && node ./scripts/generate-entries.js",
    "build:atlaspack": "NODE_ENV=production ATLASPACK_BUILD_ENV=production ATLASPACK_SUPER_BUILD=true node ../cli/bin/atlaspack.js build --no-cache --no-autoinstall ./entries/*.js --config .parcelrc",
    "create-empty-files": "touch lib/core/core/_empty.js && touch lib/utils/node-resolver-core/_empty.js"
  },
  "targets": {
    "default": {
      "context": "node",
      "isLibrary": true,
      "distDir": "lib",
      "optimize": false,
      "sourceMap": false,
      "includeNodeModules": true
    }
  },
  "alias": {
    "@swc/wasm": false
  },
  "files": [
    "lib"
  ],
  "sideEffects": true,
  "dependencies": {
    "@atlaspack/core": "*"
  },
  "devDependencies": {
    "@atlaspack/transformer-raw": "*"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atlassian-labs/atlaspack.git"
  },
  "source": "src/index.js",
  "engines": {
    "node": ">= 16.0.0"
  },
  "type": "commonjs"
}
