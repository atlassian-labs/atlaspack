{
  "name": "@atlaspack/workers-next",
  "version": "2.0.0",
  "description": "Blazing fast, zero configuration web application bundler",
  "license": "(MIT OR Apache-2.0)",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atlassian-labs/atlaspack.git"
  },
  "main": "lib/index.mjs",
  "types": "src/index.mts",
  "scripts": {
    "build-tsc": "yarn tsc --noCheck",
    "check-ts": "yarn tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./src/index.mts",
      "@atlaspack::sources": "./src/index.mts",
      "default": "./dist/index.mjs"
    }
  },
  "imports": {
    "#worker-threads": {
      "@atlaspack::sources": "./src/threads/worker-thread-prelude.mts",
      "default": "./dist/threads/worker-thread-prelude.mjs"
    }
  }
}
