{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "Cargo.toml",
    "package.json",
    "yarn.lock",
    "Cargo.lock"
  ],
  "tasks": {
    "@atlaspack/core#build": {
      "dependsOn": ["^build", "@atlaspack/compressor-raw#build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*", "test/**/*", "package.json", "Cargo.toml"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "lib/**",
        "dist/**",
        "built-tests/**",
        "*.node",
        "**/*.d.ts",
        "lib/**/*.ts",
        "src/**/*.ts"
      ]
    },
    "test": {
      "dependsOn": ["^build", "build"],
      "env": ["NODE_ENV", "ATLASPACK_BUILD_ENV", "ATLASPACK_V3"],
      "inputs": [
        "src/**/*",
        "lib/**/*",
        "test/**/*",
        "package.json",
        "data/**/*"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    }
  }
}
