{
  "compilerOptions": {
    "preserveWatchOutput": true,
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "strict": true,
    "lib": ["ESNext"],
    "rewriteRelativeImportExtensions": true,
    "allowImportingTsExtensions": true,
    "erasableSyntaxOnly": true,
    "declarationDir": "${configDir}/lib/types",
    "outDir": "${configDir}/lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "files": [
    "./types/ansi-html-community.d.ts",
    "./types/emphasize.d.ts",
    "./types/slice-ansi.d.ts"
  ]
}
